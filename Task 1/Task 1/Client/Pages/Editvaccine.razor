@page "/editvaccine"
@inherits Editvaccinebase

<h3>Vaccine Form</h3>

<EditForm Model="Vaccinemod" OnValidSubmit="OnValidSubmit">
    <br />
    <label for="Batch">Batch No</label>
    <br />
    <InputNumber id="batchno" @bind-Value="Vaccinemod.BatchNo"></InputNumber>
    <br />
    <label for="Name">Vac Name</label>
    <br />
    <InputText id="Name" @bind-Value="Vaccinemod.Name"></InputText>
    <br />
    <label for="District">District distribution</label>
    <br />
    <InputText id="Distribution" @bind-Value="Vaccinemod.distribution"></InputText>
    <br />
    <label for="Dosage">Dosage count</label>
    <br />
    <InputNumber id="Doses" @bind-Value="Vaccinemod.NoofDoses"></InputNumber>
    <br /><br />
    <button>Edit</button>
</EditForm>
<table class="table table-sm table-bordered table-striped">
    <thead>
        <tr>
            <th>Batch No</th>
            <th>Name</th>
            <th>Distribution</th>
            <th>No Of Doses</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vaccine in Vaccines)
        {
            <tr>
                <th>@vaccine.BatchNo</th>
                <th>@vaccine.Name</th>
                <th>@vaccine.distribution</th>
                <th>@vaccine.NoofDoses</th>
            </tr>
        }
    </tbody>
</table>

